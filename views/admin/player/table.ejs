<table id="example2" class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>No.</th>
      <th>Nama</th>
      <th>Email</th>
      <th>Username</th>
      <th>Telepon</th>
      <th>Favorite</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
      <% for(let i=0; i < player.length; i++){ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= player[i].name %></td>
          <td><%= player[i].email %></td>
          <td><%= player[i].username %></td>
          <td><%= player[i].phoneNumber %></td>
          <td></td>
          <td>
              <% if(player[i].status === 'Y') { %>
                  <span class="badge badge-success">
                      Aktif
                  </span>
              <% } else { %>
                  <span class="badge badge-danger">
                      Non Aktif
                  </span>
              <% } %>
          </td>
          <td>
            <form action="/player/status/<%= player[i]._id %>?_method=PUT" method="POST" style="display: inline-block;">
                <button class="btn btn-primary btn-sm">
                    <i class="fas fa-toggle-on"></i>
                    <% if(player[i].status === 'Y') { %>
                            N
                    <% } else { %>
                            Y
                    <% } %>
                </button>
            </form>
            <form action="/player/delete/<%= player[i]._id %>?_method=DELETE" method="post" style="display: inline-block;">
                <a href="/player/edit/<%= player[i]._id %>" class="btn btn-info btn-sm" > <i class="fas fa-pencil-alt"></i></a>
                <button class="btn btn-danger btn-sm"> <i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
      <% } %> 
    </tbody>
  </table>